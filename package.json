{
  "name": "rickandmorty",
  "version": "1.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "dev:vite": "vite --host",
    "dev:watch-types": "tsc --noEmit --watch",
    "serve": "vite preview",
    "type-check": "tsc",
    "test": "vitest",
    "check-types": "tsc --noEmit",
    "codegen": "graphql-codegen --config codegen.yml src/generated/graphql.tsx",
    "eslint": "eslint src --ext \".js,.jsx,.ts,.tsx\"",
    "eslint-fix": "eslint src --ext \".js,.jsx,.ts,.tsx\" --fix",
    "stylelint": "npx stylelint \"src/**/*.scss\" --color",
    "stylelint-fix": "npx stylelint \"src/**/*.scss\" --color --fix",
    "prettify": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json}\""
  },
  "dependencies": {
    "@apollo/client": "^3.9.4",
    "axios": "^1.6.7",
    "classnames": "^2.5.1",
    "graphql": "^16.8.1",
    "jotai": "^2.6.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.22.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript-graphql-files-modules": "^3.0.0",
    "@graphql-codegen/typescript-operations": "^4.1.2",
    "@graphql-codegen/typescript-react-apollo": "^4.3.0",
    "@testing-library/react": "^12.1.4",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vitejs/plugin-react": "^1.2.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jsdom": "^19.0.0",
    "prettier": "^2.6.1",
    "sass": "^1.70.0",
    "stylelint": "^16.2.1",
    "stylelint-config-css-modules": "^4.4.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-order": "^6.0.4",
    "typescript": "^4.6.3",
    "vite": "^5.0.11",
    "vitest": "^0.7.11",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^4.3.1"
  },
  "license": "MIT",
  "lint-staged": {
    "src/**/*.scss": [
      "yarn run stylelint"
    ],
    "src/**/*.{js,jsx,ts,tsx}": [
      "yarn run prettify",
      "yarn run eslint"
    ]
  }
}
